<main>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <img src="app/assets/images/no_image.jpg">
      <tabel class="tabel">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
          <th>introduction</th>
          <th></th>
          </tr>
        </tbody>
      </tabel>
      <div class="row">
          <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-gear"></i>
          <% end %>
      </div>


      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, method: :post do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class:"form_control book_title", name:"book[title]" %>
      </div>
      <div class="form-group">
        <label for="book_body">Opinion</label>
        <%= f.text_area :body, class:"form_control book_body", name:"book[body]" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover tabel-inverse">
        <% @books.each do |book| %>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag 'no_image.jpg' %></td>
          <td><%= link_to book_path(book.id) %></td>
          <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
</main>