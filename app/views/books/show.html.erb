

<main>
  <p><%= flash[:notice] %></p>
  <div class="container">
    <div class="row">
      <%= render "users/user_info.html.erb", user: @users, book: @list %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag @user.get_profile_image(100,100) %><br>
              <%= link_to @user.name, user_path(@user) %>
              </td>
              <td>
                <%= link_to @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
                <%= link_to "Delete", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>