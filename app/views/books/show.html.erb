

<main>
  <div class="container">
    <div class="row">
      <%= render "users/user_info.html.erb", user: @user, book: @list %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag "no_image.jpg" %><br>
              <%= link_to @user.name, user_path(@user) %>
              </td>
              <td>
                <%= link_to @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>